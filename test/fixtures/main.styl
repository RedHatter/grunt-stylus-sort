@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700')

// mainColor=#5aaa00
mainColor=#458100
lighter=#444444
bg=#ebffea

html, body
  padding 0
  margin 0

body
  font 1.1em 'Open Sans', Helvetica, Arial, sans-serif
  color #333333

  h1, h2
    color mainColor
    font-size 2em

  h3
    color mainColor
    font-weight normal

  a
    color lighter
    text-decoration none

    &:hover
      text-decoration underline

#header
  border-bottom 20px solid mainColor + 12%
  padding 15px

  div
    width 1000px
    margin 0 auto

  p
    float right
    text-align right
    margin-right 25px
    color lighter

    span
      display block
      font-weight bold

#first
  width 1000px
  padding 0 20px
  margin 0 auto

  form
    float right
    background-color bg
    padding 20px 30px 30px
    margin-left 20px
    width (@width / 3)

    label
      color #555555
      margin 10px 0
      display block

    input
      width calc(100% - 20px)
      padding 5px
      margin 5px 0

      &[type="submit"]
        width 100%
        padding 10px
        margin-top 20px
        color lighter

    h3
      position relative
      left -10px

    p
      font-size 0.7em

  h1
    margin 50px 0

  #checkmarks li
    list-style-image url('/images/check.png')
    margin 30px

  #dealers
    text-align center

    img
      height 65px
      padding 15px

#second
  width 1000px
  padding 0 20px
  margin 80px auto

  ul
    display block
    width 800px

    li
      list-style-type circle
      margin 5px

  iframe
    display block
    margin 150px auto

#third
  background-color bg
  padding 30px 0 50px
  margin 70px 0 100px

  div
    width 800px
    margin 0 auto

#fourth
  width 800px
  margin 0 auto

  blockquote
    margin 0
    // box-shadow 0 0 15px rgba(0, 0, 0, 0.3)
    padding 15px
    margin 30px
    // border-radius 5px'

    p
      margin 0 0 30px
      padding 0

    footer
      text-align right
      margin-right 10px
      color rgba(0, 0, 0, 0.3)

    &:nth-child(2)
      position relative
      left 20px

    &:nth-child(3)
      position relative
      left -20px

    &:nth-child(4)
      position relative
      left 40px

#footer
  background-color #141414
  color #bbbbbb
  padding-left 60px

  p
    display inline-block
    margin 50px 40px
    vertical-align top

    a
      color #888888
      text-decoration none

      &:hover
        color #aaaaaa
